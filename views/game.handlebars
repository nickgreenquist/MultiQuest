            </div>
            <div class="row">
                <div id="skill_left">
                    <p>PLAY TIME:</p>
                </div>
                <div id="skill_right">
                    <p id="time"></p>
                </div>
            </div>
            <div class="row" style="justify-content: space-between;">
                <div class="row">
                    <button id="quitButton">SAVE & QUIT</button>
                </div>
                <div class="row">
                    <button id="heal">HEAL</button>
                </div>
            </div>
        </div>
        <div id="ui_right">
            <div class="row">
                <div id="skill_left">
                    <a id="healthButton" class="btn" href="#"> <i class="fa fa-plus-square fa-2x"></i></a>
                    <p>MAX HP:</p>
                </div>
                <div id="skill_right">
                    <p id="health"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <a id="attackButton" class="btn" href="#"> <i class="fa fa-plus-square fa-2x"></i></a>
                    <p>ATTK:</p>
                </div>
                <div id="skill_right">
                    <p id="attack"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <a id="speedButton" class="btn" href="#"> <i class="fa fa-plus-square fa-2x"></i></a>
                    <p>SPD:</p>
                </div>
                <div id="skill_right">
                    <p id="speed"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <a id="spellButton" class="btn" href="#"> <i class="fa fa-plus-square fa-2x"></i></a>
                    <p>INT:</p>
                </div>
                <div id="skill_right">
                    <p id="spell"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <p>EXP:</p>
                </div>
                <div id="skill_right">
                    <p id="exp"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <p>SKILL PTS:</p>
                </div>
                <div id="skill_right">
                    <p id="points"></p>
                </div>
            </div>
        </div>
    </div>
