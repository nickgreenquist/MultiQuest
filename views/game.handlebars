    <script data-main="/assets/game" src="/assets/lib/require.js"></script>
</head>
<body>
    <div id="game">
        <canvas id="canvas">Please use an HTML 5 browser</canvas>
    </div>
    <div id="ui">
        <div id="ui_left">
            <div class="row">
                <div id="skill_left">
                    <p>NAME:</p>
                </div>
                <div id="skill_right">
                    <p id="name"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <p>LEVEL:</p>
                </div>
                <div id="skill_right">
                    <p id="level"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <p>EXP/MIN:</p>
                </div>
                <div id="skill_right">
                    <p id="expavg"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <p>DISTANCE::</p>
                </div>
                <div id="skill_right">
                    <p id="distance"></p>
                </div>
            </div>
            <div class="row">
                <div id="skill_left">
                    <p>MAX DISTANCE:</p>
                </div>
                <div id="skill_right">
                    <p id="maxdistance"></p>
